{
  "name": "node-server-ts",
  "version": "0.0.1",
  "private": "true",
  "description": "Generic boilerplate for Node.js server with TypeScript",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc --build ./tsconfig.build.json && tsc-alias",
    "prebuild": "rimraf dist",
    "dev": "nodemon",
    "start": "node dist/index.js",
    "lint": "eslint './src/**/*.ts'",
    "test": "CI=true jest",
    "test:local": "jest --verbose",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "boilerplate",
    "node",
    "typescript"
  ],
  "author": "victorlcm",
  "license": "MIT",
  "devDependencies": {
    "@types/config": "3.3.5",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.3.1",
    "nodemon": "2.0.20",
    "prettier": "2.8.3",
    "rimraf": "4.1.0",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsc-alias": "1.8.2",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "config": "3.3.12",
    "js-yaml": "4.1.0",
    "tslib": "2.4.1"
  }
}
